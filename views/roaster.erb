<div class="jumbotron">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <img class="center-block" src='<%= url("img/#{@roaster.image_url}") %>' alt="" />
    </div>
  </div>
  <% @user = User.find(@roaster.user_id) %>
  <h1><%= @user.name %></h1>
  <p class="text-center">
    <%= @roaster.street %><br>
    <%= @roaster.city %>, <%= @roaster.state %> <%= @roaster.zip %><br>
    <%= @roaster.phone_number %>
  </p>
</div>

<!-- roasts -->
<h2 class="text-center" id="roast-header">Roasts</h2>
<div class="roaster-gallery">
  <% @counter = 1 %>
  <% @roaster.roasts.each do |roast| %>
    <div class="item roast-item">
      <div class="roaster-image">
        <img class="roast-img" src='<%= url("img/#{roast.image_url}") %>' alt="" />
      </div>
      <% @farmer = Farmer.find(roast.user_id) %>
      <% @farmer_user = User.find(@farmer.user_id) %>
      <br>
      <h1 class="text-center" id="roast-name"><%= roast.name %></h1><br>
      <div class="roaster-description">
        <p class="farmer-name">Farmer: <%= @farmer_user.name %></p>
        <p>Roast Date: <%= roast.roast_date %></p>
        <p>Roast Type: <%= roast.roast_type %></p>
        <p><%= roast.notes %></p>
        <p>$<%= roast.price %>/<%= roast.ounces %>oz.</p>
        <p class="description"><%= roast.description %></p>
      </div>

    </div>
    <% if @counter % 3 == 0 %>
      </div>
      <div class="gallery">
    <% end %>
    <% @counter += 1 %>
  <% end %>
</div>

